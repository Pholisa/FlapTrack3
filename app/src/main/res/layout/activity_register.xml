<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Register"
    android:background="@drawable/backgroundtransparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvCreateAcc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:fontFamily="@font/architects_daughter"
            android:text="CREATE ACCOUNT"
            android:textAlignment="center"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCreateAcc"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">

            <!-- ... Other EditText and Button Views ... -->
            <EditText
                android:id="@+id/edFirstname"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:drawablePadding="8dp"
                android:hint="First Name"
                android:padding="8dp"
                android:textSize="20dp"
                android:background="@drawable/theborder"/>
            <EditText
                android:id="@+id/edlastName"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:drawablePadding="8dp"
                android:hint="Surname"
                android:padding="8dp"
                android:textSize="20dp"
                android:background="@drawable/theborder"/>
            <EditText
                android:id="@+id/edAge"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:drawablePadding="8dp"
                android:hint="Age"
                android:padding="8dp"
                android:textSize="20dp"
                android:background="@drawable/theborder"/>

            <EditText
                android:id="@+id/edEmail"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:drawablePadding="8dp"
                android:hint="Email"
                android:padding="8dp"
                android:textSize="20dp"
                android:background="@drawable/theborder"/>

            <EditText
                android:id="@+id/edPassword"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:drawablePadding="8dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textSize="20dp"
                android:background="@drawable/theborder"/>

            <EditText
                android:id="@+id/edPasswordConfirm"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:drawablePadding="8dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textSize="20dp"
                android:background="@drawable/theborder"/>

            <Button
                android:id="@+id/btnSignUp"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_marginTop="30dp"
                android:text="Sign Up"
                android:textSize="18sp"
                app:cornerRadius="30dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tvLoginRedirectText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already an user? "
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvLoginRedirectText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/tvLoginRedirectText"
                    android:text="Login"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>





